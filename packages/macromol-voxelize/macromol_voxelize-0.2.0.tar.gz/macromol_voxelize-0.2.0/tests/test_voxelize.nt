test_set_atom_channels_by_element:
  -
    id: matches-all
    atoms:
      > element x y z
      > C       1 2 3
      > N       2 3 4
      > O       3 4 5
      > S       4 5 6
    channels:
      [C, N, O, .*]
    expected:
      > element x y z c
      > C       1 2 3 0,3
      > N       2 3 4 1,3
      > O       3 4 5 2,3
      > S       4 5 6 3
  -
    id: matches-first
    atoms:
      > element x y z
      > C       1 2 3
      > N       2 3 4
      > O       3 4 5
      > S       4 5 6
    channels:
      [C, N, O, .*]
    kwargs:
      first_match: True
    expected:
      > element x y z c
      > C       1 2 3 0
      > N       2 3 4 1
      > O       3 4 5 2
      > S       4 5 6 3
  -
    id: missing-atoms-forbid
    atoms:
      > element x y z
      > C       1 2 3
      > N       2 3 4
      > O       3 4 5
      > S       4 5 6
    channels:
      [C, N, O]
    error:
      type: ValidationError
      message:
        - all atoms must be assigned at least one channel
        - channels: ['C', 'N', 'O']
        - unassigned elements: ['S']
  -
    id: missing-atoms-allow
    atoms:
      > element x y z
      > C       1 2 3
      > N       2 3 4
      > O       3 4 5
      > S       4 5 6
    channels:
      [C, N, O]
    kwargs:
      allow_missing_atoms: True
    expected:
      > element x y z c
      > C       1 2 3 0
      > N       2 3 4 1
      > O       3 4 5 2
  -
    id: partial
    atoms:
      > element x y z
      > S       1 2 3
      > Se      2 3 4
      > Si      3 4 5
    channels:
      [S|Se]
    kwargs:
      allow_missing_atoms: True
    expected:
      > element x y z c
      > S       1 2 3 0
      > Se      2 3 4 0
